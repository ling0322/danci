<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FF9900" />
            <stroke
                android:width="2dp"
                android:color="#FF9900"
                android:dashGap="5dp"
                android:dashWidth="10dp" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#ffffff" />
            <stroke
                android:width="2dp"
                android:color="#FF9900"
                android:dashGap="5dp"
                android:dashWidth="10dp" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
